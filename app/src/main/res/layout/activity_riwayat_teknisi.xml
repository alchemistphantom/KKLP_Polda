<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="left"
    android:orientation="vertical"
    android:background="@drawable/coba1"
    tools:context=".RiwayatTeknisiActivity">

    <TextView
        android:textSize="25dp"
        android:text="Tanggal Laporan Masuk"
        android:id="@+id/tv_tgl_laporan_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:textSize="25dp"
        android:text="Tanggal Perbaikan"
        android:id="@+id/tv_tgl_perbaikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:text="Hasil Diagnosa"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="75dp">

        <EditText
            android:background="@drawable/border_edittext"
            android:gravity="top"
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/background_light"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>